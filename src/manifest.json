{
  "manifest_version": 2,
  "name": "Copy Cat - Quick Copy Title and URL",
  "description": "Quickly copy the title of page and url into your clipboard!",
  "version": "1.6.0",
  "permissions": [
    "tabs",
    "clipboardWrite",
    "notifications",
    "storage",
    "contextMenus"
  ],
  "browser_action": {
      "default_title": "Copy Title and URL",
      "default_icon": "icons/icon.png",
      "default_popup": "popup.html"
  },
  "icons": { 
  	"16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png" 
  },
  "background": {
    "scripts": ["common.js","background.js"],
    "persistent": false
  },
  "commands": {
    "shortcut-c": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "MacCtrl+Shift+C"
      },
      "description": "Repeat previous copy (Default)"
    },
    "shortcut-a": {
      "suggested_key": {
        "default": "Alt+Shift+A",
        "mac": "MacCtrl+Shift+A"
      },
      "description": "Repeat previous copy for all tabs (Default)"
    },
    "shortcut-r": {
      "suggested_key": {
        "default": "Alt+Shift+R",
        "mac": "MacCtrl+Shift+R"
      },
      "description": "Copy Rich Text (Default)"
    },
    "shortcut-m": {
      "suggested_key": {
        "default": "Alt+Shift+M",
        "mac": "MacCtrl+Shift+M"
      },
      "description": "Copy Markdown (Default)"
    }
  }
}